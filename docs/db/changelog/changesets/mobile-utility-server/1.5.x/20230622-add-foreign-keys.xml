<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="1" author="Lubos Racansky" logicalFilePath="mobile-utility-server/1.5.x/20230622-add-foreign-keys.xml">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="ssl_user_fk" foreignKeyTableName="ssl_user_authority" />
            </not>
        </preConditions>
        <addForeignKeyConstraint baseTableName="ssl_user_authority" baseColumnNames="user_id" constraintName="ssl_user_fk" referencedTableName="ssl_user" referencedColumnNames="id" />
    </changeSet>

    <changeSet id="2" author="Lubos Racansky" logicalFilePath="mobile-utility-server/1.5.x/20230622-add-foreign-keys.xml">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="ssl_mobile_app_fk" foreignKeyTableName="ssl_mobile_domain" />
            </not>
        </preConditions>
        <addForeignKeyConstraint baseTableName="ssl_mobile_domain" baseColumnNames="app_id" constraintName="ssl_mobile_app_fk" referencedTableName="ssl_mobile_app" referencedColumnNames="id" />
    </changeSet>

    <changeSet id="3" author="Lubos Racansky" logicalFilePath="mobile-utility-server/1.5.x/20230622-add-foreign-keys.xml">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="ssl_mobile_domain_fk" foreignKeyTableName="ssl_certificate" />
            </not>
        </preConditions>
        <addForeignKeyConstraint baseTableName="ssl_certificate" baseColumnNames="mobile_domain_id" constraintName="ssl_mobile_domain_fk" referencedTableName="ssl_mobile_domain" referencedColumnNames="id" />
    </changeSet>

</databaseChangeLog>